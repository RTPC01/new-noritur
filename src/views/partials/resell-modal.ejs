<div class="modal fade" id="newresell">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="min-height: 400px;">
            <div class="modal-header">
                <h5>중고거래 등록하기</h5>
                <button type="button" class="btn-close close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/resells" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <textarea name="desc" id="desc" class="form-control" row="15" cols="50" placeholder="<%= currentUser.username %>중고거래를 시작해보세요!" required></textarea>
                    </div>
                    <div class="form-group mt-1">
                        <input class="form-control" type="file" name="image" multiple>
                    </div>
                    <div class="form group">
                        <input type="number" class="form-control" id="price" placeholder="얼마에 파시겠어요?" aria-label="price"
                        aria-describedby="price-label" name="price" min="0" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">중고거래 등록하기</button>
                </div>
            </form>
        </div>
    </div>
</div>