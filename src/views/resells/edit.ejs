<%- include('../partials/header') %>

<div class="container col-lg-8">
    <div class="card">
        <h5 class="card-header">
            중고거래 수정하기
        </h5>
        <div class="card-body">
            <form action="/resells/<%= resell._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" id="desc" name="description"><%= resell.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="price">가격</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= resell.price %>" min="0" required>
                </div>
                <button type="submit" class="btn btn-primary mt-3">수정하기</button>
            </form>
        </div>
    </div>


</div>



<%- include('../partials/footer') %>